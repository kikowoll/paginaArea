    Grupo {{ grupos.nombre }}
{% endblock %}

{# CSS #}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('leaflet/leaflet.css') }}">
    
{% endblock %}

{# CONTENIDO #}
{% block body %}
