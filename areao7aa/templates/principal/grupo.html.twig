    <div class="container">
        <a href="{{ path('pri_index') }}" class="btn btn-success btn-sm"><i class="fa fa-arrow-left"></i> Volver</a>
        <h1 class="text-primary text-center">Grupo {{ grupos.nombre }}</h1>
        <div class="col-md-6 offset-md-3">
            <h6><span class="text-primary">DIRECCION: </span>{{ grupos.direccion }}</h6>
            <h6><span class="text-primary">LOCAL: </span>{{ grupos.local }}</h6>
            <h6><span class="text-primary">MUNICIPIO: </span>{{ grupos.zona }}</h6>
            <h6><span class="text-primary">CODIGO POSTAL: </span>{{ grupos.codpos}} - {{ grupos.ciudad }}</h6>
            <h6><span class="text-primary">REUNIONES CERRADAS: </span>{{ grupos.cerradas }}</h6>
            <h6><span class="text-primary">REUNIONES ABIERTAS: </span>{{ grupos.abiertas }}</h6>
            <h6><span class="text-primary">OTROS: </span>{{ grupos.otros }}</h6>
        </div>
        <div class="conte-mapa col-md-6 offset-md-3">
            <div id='myMapa' style='width: 100%; height: 400px;'></div>
        </div>
    </div>
{% endblock %}

{# JAVASCRIPTS #}
{% block javascripts %}
<script src="{{ asset('leaflet/leaflet.js') }}"></script>
<script>
    const tileMapa = 'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png'
    var myMap = L.map('myMapa').setView([40.42028, -3.70577], 4)

    L.tileLayer(tileMapa, {
        maxZoom: 18
    }).addTo(myMap)
</script>
{% endblock %}